menu "Driver: Hacktivity 2019 SAMD I/O"
	config DRIVER_HACKTIVITY_SAMD_ENABLE
		bool "Enable the Hacktivity 2019 SAMD I/O driver"
		default n

	config I2C_ADDR_HACKTIVITY_SAMD
		depends on DRIVER_HACKTIVITY_SAMD_ENABLE
		int "SAMD I2C address"
		default 48

	config PIN_NUM_HACKTIVITY_SAMD_INT
		depends on DRIVER_HACKTIVITY_SAMD_ENABLE
		int "GPIO pin used for SAMD interrupt"
		default 25
endmenu
